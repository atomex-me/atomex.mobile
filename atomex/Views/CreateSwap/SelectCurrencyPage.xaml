<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:atomex.Helpers"
    x:Class="atomex.Views.CreateSwap.SelectCurrencyPage"
    xmlns:converters="clr-namespace:atomex.Converters"
    x:Name="BindingContextPage"
    Title="{helpers:Translate CreateSwapPageTitle}"
    Style="{DynamicResource MainBackgroundStyle}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringEnumEqualsConverter x:Key="StringEnumEqualsConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{helpers:Translate SendFrom}"
                   Style="{DynamicResource CreateSwapTitleStyle}"
                   HorizontalTextAlignment="Start"
                   FontSize="30"
                   Margin="0,20">
                <Label.Triggers>
                    <DataTrigger TargetType="Label"
                                 Binding="{Binding Type, Mode=OneWay, Converter={StaticResource StringEnumEqualsConverter}, ConverterParameter='From'}"
                                 Value="True">
                        <Setter Property="Text"
                                Value="{helpers:Translate SendFrom}"/>
                    </DataTrigger>
                    <DataTrigger TargetType="Label"
                                 Binding="{Binding Type, Mode=OneWay, Converter={StaticResource StringEnumEqualsConverter}, ConverterParameter='From'}"
                                 Value="False">
                        <Setter Property="Text"
                                Value="{helpers:Translate ReceiveTo}"/>
                    </DataTrigger>
                </Label.Triggers>
            </Label>
            <ListView ItemsSource="{Binding Currencies}"
                      SelectionMode="Single"
                      SelectedItem="{Binding SelectedCurrency}"
                      CachingStrategy="RetainElement"
                      HasUnevenRows="True"
                      SeparatorVisibility="Default"
                      BackgroundColor="{AppThemeBinding Dark={StaticResource MainBackgroundColorDark}, Light={StaticResource MainBackgroundColor}}"
                      SeparatorColor="{AppThemeBinding Dark={StaticResource ListViewSeparatorColorDark}, Light={StaticResource ListViewSeparatorColor}}"
                      VerticalOptions="FillAndExpand"
                      Footer="">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnSpacing="0"
                                  RowSpacing="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="3.5*" />
                                    <ColumnDefinition Width="3.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.RowSpan="2"
                                       WidthRequest="22"
                                       HeightRequest="22"
                                       Margin="10,0"
                                       VerticalOptions="CenterAndExpand"
                                       Source="{Binding CurrencyViewModel.CurrencyCode}"/>
                                <Label Grid.Column="1"
                                       Text="{Binding CurrencyViewModel.Currency.Description}"
                                       FontFamily="{DynamicResource RegularFont}"
                                       TextColor="{AppThemeBinding Dark={StaticResource MainTextColorDark}, Light={StaticResource MainTextColor}}"
                                       FontSize="20"
                                       Margin="0,3"
                                       VerticalTextAlignment="End"
                                       HorizontalTextAlignment="Start"/>
                                <Label Grid.Row="1"
                                       Grid.Column="1"
                                       TextColor="{AppThemeBinding Dark={StaticResource MainTextColorDark}, Light={StaticResource MainTextColor}}"
                                       FontFamily="{DynamicResource RegularFont}"
                                       FontSize="14"
                                       VerticalTextAlignment="Start"
                                       HorizontalTextAlignment="Start">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding CurrencyViewModel.TotalAmount, StringFormat='{0:0.#########}'}"/>
                                            <Span Text=" " /> 
                                            <Span Text="{Binding CurrencyViewModel.CurrencyCode}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Grid.Column="2"
                                       Text="{Binding SelectedAddressDescription}"
                                       FontFamily="{DynamicResource RegularFont}"
                                       TextColor="{AppThemeBinding Dark={StaticResource AdditionalTextColorDark}, Light={StaticResource AdditionalTextColor}}"
                                       Margin="10,2"
                                       FontSize="12"
                                       VerticalTextAlignment="End"
                                       HorizontalTextAlignment="End"/>
                                <Label Grid.Row="1"
                                       Grid.Column="2"
                                       FontFamily="{DynamicResource RegularFont}"
                                       TextColor="{AppThemeBinding Dark={StaticResource AdditionalTextColorDark}, Light={StaticResource AdditionalTextColor}}"
                                       Margin="10,0"
                                       FontSize="12"
                                       VerticalTextAlignment="Start"
                                       HorizontalTextAlignment="End">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding IsNew}"
                                                     Value="True">
                                            <Setter Property="IsVisible"
                                                    Value="False"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding SelectedBalance, StringFormat='{0:0.#########}'}"/>
                                            <Span Text=" " /> 
                                            <Span Text="{Binding CurrencyViewModel.CurrencyCode}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Image Grid.RowSpan="2"
                                       Grid.Column="3"
                                       WidthRequest="24"
                                       HeightRequest="24"
                                       Margin="10,0,20,0"
                                       VerticalOptions="CenterAndExpand"
                                       Source="ic_edit">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.ChangeAddressesCommand, Source={x:Reference BindingContextPage}}"
                                                              CommandParameter="{Binding .}"/>
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
