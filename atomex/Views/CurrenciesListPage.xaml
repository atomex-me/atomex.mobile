<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:atomex.Resources"
             xmlns:custom="clr-namespace:atomex.CustomElements"
             x:Class="atomex.CurrenciesListPage"
             Title="{x:Static resources:AppResources.WalletsPageTitle}"
             BackgroundColor="{DynamicResource MainBackgroundColor}">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding CurrencyViewModels}"
                  HasUnevenRows="True"
                  ItemTapped="OnListViewItemTapped"
                  SeparatorVisibility="None"
                  VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <custom:CustomViewCell SelectedBackgroundColor="{DynamicResource ListViewSelectedBackgroundColor}">
                        <Grid ColumnSpacing="0"
                              RowSpacing="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="0.5" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="4*" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.RowSpan="2"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Margin="10,0"
                                   VerticalOptions="CenterAndExpand"
                                   Source="{Binding CurrencyCode}"/>
                            <Label Grid.Column="1"
                                   Text="{Binding Currency.Description}"
                                   FontFamily="{DynamicResource RegularFont}"
                                   TextColor="{DynamicResource MainTextColor}"
                                   FontSize="14"
                                   Margin="0,10,0,0"
                                   VerticalTextAlignment="End"
                                   HorizontalTextAlignment="Start"/>
                            <Label Grid.Column="2"
                                   Text="{Binding AvailableAmount}"
                                   FontFamily="{DynamicResource RegularFont}"
                                   TextColor="{DynamicResource MainTextColor}"
                                   Margin="10,10,10,0"
                                   VerticalTextAlignment="End"
                                   HorizontalTextAlignment="End">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding AvailableAmount, StringFormat='{0:0.#####}'}"
                                              FontSize="14"/>
                                        <Span Text=" " /> 
                                        <Span Text="{Binding CurrencyCode}"
                                              FontSize="12"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   Text="{Binding Price, StringFormat='{0:f2} $'}"
                                   TextColor="{DynamicResource AdditionalTextColor}"
                                   FontFamily="{DynamicResource LightFont}"
                                   FontSize="10"
                                   VerticalTextAlignment="Start"
                                   HorizontalTextAlignment="Start"/>
                            <Label Grid.Row="1"
                                   Grid.Column="2"
                                   Text="{Binding AmountInBase, StringFormat='{0:f2} $'}"
                                   FontFamily="{DynamicResource LightFont}"
                                   TextColor="{DynamicResource AdditionalTextColor}"
                                   FontSize="10"
                                   Margin="10,0"
                                   VerticalTextAlignment="Start"
                                   HorizontalTextAlignment="End" />
                            <StackLayout Style="{DynamicResource SeparatorStyle}"
                                         Grid.Row="2"
                                         Grid.Column="1"
                                         Grid.ColumnSpan="2"/>
                        </Grid>
                    </custom:CustomViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>            
    </ContentPage.Content>
</ContentPage>
